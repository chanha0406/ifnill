<div class="container visible">
   <div style="text-align:center; padding-top:30px">
      <div class="container">
         <div class="row">
           <div class="col-lg-3">
            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
               <% if current_user.profile.nil? %>
                  <img class="img-circle" src="<%= image_url('default_profile.jpg')%>" width="140" height="140">
               <% else %>
                  <img class="img-circle" src="<%=current_user.profile.url%>" width="140" height="140">
               <% end %>
             <br>
             <%= f.file_field :profile, label:"프로필 사진 변경"%>
           </div>
           <div class="col-lg-6" style="margin-top:20px">
             <h2><%= current_user.name%></h2>
             <p>이름은 수정 할 수 없습니다.</p>
           </div>
           <div class="col-lg-3"></div>
         </div>
      <hr>
      </div>
   </div>


   <div class="devise-container">
       <div class="row">
         <div class="col-sm-3"></div>
         <div class="col-sm-6">

               <%= f.email_field :email, autofocus: true %>
               <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>현재 이메일 인증을 확인중입니다.: <%= resource.unconfirmed_email %></div>
               <% end %>
               
               <%= f.password_field :password, autocomplete: "off", label: "변경 비밀번호" %>
               <%= f.password_field :password_confirmation, autocomplete: "off", label: "변경 비밀번호 확인" %>
               <%= f.password_field :current_password, autocomplete: "off", label: "현재 비밀번호 확인" %>

               <div align="center">
                  <button type="submit"class="btn btn-default">변경</button>
                  <a href="<%registration_path(resource_name)%>" class="btn btn-default" data-confirm="정말 탈퇴 하시겠습니까?">탈퇴</a>
               </div>
            <% end %>

         </div>
      </div>   
   </div>
</div>