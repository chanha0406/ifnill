<div class="container visible">
   <div class="devise-container">
   <div class="col-lg-3"></div>
   <div class="col-lg-6">
      <h2>로그인</h2><br>

      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= f.email_field :email, autofocus: true, label: "이메일" %>
         <%= f.password_field :password, autocomplete: "off", label: "비밀번호"%>

         <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, label: "자동 로그인"%>
         <% end -%>
         
         <div>
            <button type="submit" class="btn btn-primary col-lg-12">로그인</button><br>
            <!--<a href="<%= new_registration_path(resource_name) %>" class="btn btn-primary col-lg-12">회원가입</a>-->
         </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
      <div class="col-lg-3"></div>
   </div>
</div>