<div class="container visible">
   <div class="devise-container">
      <h2>로그인</h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= f.email_field :email, autofocus: true, label: "이메일" %>
         <%= f.password_field :password, autocomplete: "off", label: "비밀번호"%>

         <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, label: "자동 로그인"%>
         <% end -%>
         
         <div align="center">
            <button type="submit" class="btn btn-danger">로그인</button>
            <a href="<%= new_registration_path(resource_name) %>" class="btn btn-danger">회원가입</a>
         </div>
      <% end %>

      <%= render "devise/shared/links" %>
   </div>
</div>